{% extends 'SynapseAdminBundle::layout.html.twig' %}

{% block content %}
<div class="row">
  <div class="col-lg-12">
    <div class="panel">
      <header class="panel-heading composed bg-main">
        <a href class="combo">
          <i class="fa fa-object-group"></i>
        </a>
        <h3>Skeletons</h3>
        <a href="{{ path('synapse_admin_skeleton_init') }}" class="combo">
          <i class="fa fa-plus"></i>
          <span>Init skeleton</span>
        </a>
      </header>
      <table class="table table-striped table-advance table-hover">
        <thead>
          <tr>
            <th>Template type</th>
            <th>Content type</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
        {% for skeleton in skeletons %}
          <tr>
            <td>{{ skeleton.getTemplateType().getName() | humanize }}</td>
            <td>{{ skeleton.getContentType().getName() | humanize }}</td>
            <td class="text-right">
                <a class="btn btn-primary btn-sm" href="{{ path('synapse_admin_skeleton_edition', { id: skeleton.id }) }}">
                  <i class="fa fa-edit"></i>
                </a>
            </td>
          </tr>
        {% endfor %}
        </tbody>
      </table>
    </div>
  </div>
</div>
{% endblock %}
